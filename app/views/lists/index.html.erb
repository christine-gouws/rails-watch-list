<div class="cover  d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
  <h1>Save any kind of movies</h1>
  </div>
</div>


<div class="container">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3>My Lists</h3>
    <%= link_to "create movie list", new_list_path, class: 'btn-flat text-decoration-none' %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 colsm-6 col-md-4">
        <%= link_to list_path(list), class:'text-decoration-none' do %>
          <div class="card-category" data-aos="zoom-in" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('list_background.jpeg') %>)">
              <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
